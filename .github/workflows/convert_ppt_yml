name: Convert PowerPoint to PDF and Images

on:
  push:
    paths:
      - 'source/*.pptx'
      - 'source/*.ppt'
  workflow_dispatch:

permissions:
  contents: write
  pages: write
  id-token: write

jobs:
  convert:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      
    - name: Install LibreOffice
      run: |
        sudo apt-get update
        sudo apt-get install -y libreoffice
        
    - name: Convert PPTX to PDF
      run: |
        mkdir -p output
        for file in source/*.ppt*; do
          if [ -f "$file" ]; then
            echo "Converting: $file"
            libreoffice --headless --convert-to pdf --outdir output "$file"
          fi
        done
        
    - name: Install ImageMagick and configure
      run: |
        sudo apt-get install -y imagemagick
        # PDFÂ§âÊèõ„ÅÆ„Åü„ÇÅ„ÅÆ„Éù„É™„Ç∑„ÉºË®≠ÂÆö
        sudo sed -i 's/rights="none" pattern="PDF"/rights="read|write" pattern="PDF"/' /etc/ImageMagick-6/policy.xml
        
    - name: Convert PDF to PNG images
      run: |
        mkdir -p output/slides
        for pdf in output/*.pdf; do
          if [ -f "$pdf" ]; then
            filename=$(basename "$pdf" .pdf)
            echo "Creating slides for: $pdf"
            convert -density 300 "$pdf" -quality 90 "output/slides/${filename}-%02d.png"
          fi
        done
        
    - name: Create SlideShare-style viewer
      run: |
        # SlideShareÈ¢®HTML„Éì„É•„Éº„Ç¢„Éº„Çí‰ΩúÊàê
        mkdir -p docs
        cat > docs/index.html << 'EOF'
