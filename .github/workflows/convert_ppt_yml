        # PDF‰∏ÄË¶ß„ÇíËøΩÂä†
        for pdf in output/*.pdf; do
          if [ -f "$pdf" ]; then
            filename=$(basename "$pdf")
            echo "- [${filename}](output/${filename})" >> README.md
          fi
        done
        
